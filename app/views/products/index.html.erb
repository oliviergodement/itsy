<h1>Products index</h1>
<table>
   <thead>
  <tr>
     <th>Product name</th>
     <th>Price</th>
     <th>Localization</th>
     <th>Quantity left</th>
     <th>Description</th>
  </tr>
 </thead>
  <% @products.each do |product| %>
    <tr>
      <% if product.pictures.size > 0 %>
        <td><%= image_tag product.pictures.first.s3picture_url, size: "200x300", alt: product.pictures.first.alt%></td>
      <% end %>
      <td><%= link_to(product.name, product_path(product))%></td>
      <td><% if product.price % 1 == 0 %>
                <%= product.price.to_i %>
              <% else %>
                <%= product.price %>
              <% end %> â‚¬</td>
      <td><%= product.localization %></td>
      <td><%= product.quantity %></td>
      <td><%= truncate(product.description, length: 30) %></td>
    </tr>
  <% end %>
</table>
