<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category_id %>
  <%= f.select(:category_id, options_for_select(@categories)) %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :quantity %>
  <%= f.text_area :quantity %>
  <%= f.label :localization %>
  <%= f.text_field :localization %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>