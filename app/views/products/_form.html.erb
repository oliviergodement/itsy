  <%= form_for @product do |f| %>
    <div class="form-group">
      <div><%= f.label :name %></div>
      <div><%= f.text_field :name, required: true, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div><%= f.label :category_id %></div>
      <div><%= f.select(:category_id, options_for_select(@categories), {}, {class: "form-control"}) %></div>
    </div>
    <div class="form-group">
      <div><%= f.label :price %></div>
      <div><%= f.number_field :price, required: true, class: "form-control" %> â‚¬</div>
    </div>
    <div class="form-group">
      <div><%= f.label :quantity %></div>
      <div><%= f.number_field :quantity, required: true, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div><%= f.label :localization %></div>
      <div><%= f.text_field :localization, required: true, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div><%= f.label :description %></div>
      <div><%= f.text_area(:description, required: true, cols: 50, rows: 10, class: "form-control") %></div>
    </div>
    <div><%= f.hidden_field :user_id, value: current_user.id %></div>
    <div><%= f.submit class: "btn btn-primary" %></div>
  <% end %>


